{% schema %}
{
  "name": "Custom Tabs Section",
  "settings": [
    {
      "type": "text",
      "label": "Tab 1 Title",
      "id": "tab_1_title",
      "default": "Tab 1"
    },
    {
      "type": "textarea",
      "label": "Tab 1 Content",
      "id": "tab_1_content",
      "default": "Content for Tab 1"
    },
    {
      "type": "text",
      "label": "Tab 2 Title",
      "id": "tab_2_title",
      "default": "Tab 2"
    },
    {
      "type": "textarea",
      "label": "Tab 2 Content",
      "id": "tab_2_content",
      "default": "Content for Tab 2"
    }
  ]
}
{% endschema %}

<!-- HTML Structure -->
<div class="tabs">
  <button class="tab-button" data-tab="tab-1">{{ settings.tab_1_title }}</button>
  <button class="tab-button" data-tab="tab-2">{{ settings.tab_2_title }}</button>
</div>

<!-- Tab Content -->
<div id="tab-1" class="tab-content">
  <p>{{ settings.tab_1_content }}</p>
</div>
<div id="tab-2" class="tab-content" style="display:none;">
  <p>{{ settings.tab_2_content }}</p>
</div>

<!-- JavaScript to Switch Tabs -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');
        
        // Hide all tabs
        document.querySelectorAll('.tab-content').forEach(tab => {
          tab.style.display = 'none';
        });
        
        // Show selected tab
        document.getElementById(targetTab).style.display = 'block';
        
        // Mark the active button
        tabButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
      });
    });
  });
</script>
