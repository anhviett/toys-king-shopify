    "custom_liquid_HxnxQV": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "<!-- Thêm CSS cho Isotope -->\n<link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/isotope/3.0.6/isotope.pkgd.min.css\" />\n\n<!-- Mã HTML cho Isotope -->\n<div class=\"isotope-filters\">\n  <button class=\"filter-button\" data-filter=\"*\">Tất cả</button>\n\n\n  <button class=\"filter-button\" data-filter=\".category0-3years\">0-3 years</button>\n  <button class=\"filter-button\" data-filter=\".category3-6years\">3-6 years</button>\n  <button class=\"filter-button\" data-filter=\".category14-years\">14+ years</button>\n</div>\n\n<div class=\"isotope-container\">\n  {% assign collection_handle = 'new-products' %} <!-- Thay 'your-collection-handle' bằng tên của collection -->\n  {% assign collection = collections[collection_handle] %}\n  {% for product in collection.products %}\n    <div class=\"isotope-item category{{ product.tags | first | replace: '+', '-' }}\">\n      <div class=\"product-item\">\n        <img src=\"{{ product.featured_image | img_url: 'medium' }}\" alt=\"{{ product.title }}\">\n        <h3>{{ product.title }}</h3>\n        <p>{{ product.price | money }}</p>\n      </div>\n    </div>\n  {% endfor %}\n</div>\n<!-- Thêm JS cho Isotope -->\n<script src=\"https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js\"></script>\n<script>\n // Kiểm tra xem thư viện Isotope đã được tải hay chưa\n  if (typeof Isotope === 'undefined') {\n    console.error('Isotope chưa được tải!');\n} else {\n    // Khởi tạo Isotope\n    var iso = new Isotope('.isotope-container', {\n        itemSelector: '.isotope-item',\n        layoutMode: 'fitRows'\n    });\n\n    // Bộ lọc cho các nút\n    var filterButtons = document.querySelectorAll('.filter-button');\n    filterButtons.forEach(function(button) {\n        button.addEventListener('click', function() {\n            var filterValue = button.getAttribute('data-filter');\n\n            // Escape dấu cộng trong tên class\n            var escapedFilterValue = filterValue.replace('+', '-');\nconsole.log(escapedFilterValue)\n            // Áp dụng bộ lọc với giá trị đã escape\n            iso.arrange({ filter: escapedFilterValue });\n            iso.layout();\n        });\n    });\n}\n\n</script>",
        "color_scheme": "",
        "padding_top": 40,
        "padding_bottom": 52
      }
